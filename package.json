{
  "name": "revSyntax",
  "displayName": "rev-highlight",
  "description": "gives revbayes highlight",
  "version": "0.0.1",
  "publisher": "Benjamin-So",  

  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "commands": [
      {
          "command": "revbayesRunner.runLineOrSelection",
          "title": "Run RevBayes Line or Selection",
          "category": "RevBayes"
      }
  ],
  "keybindings": [
      {
        "key": "ctrl+shift+alt+b",
        "command": "runCommands",
        "args": {
          "commands": [
            "workbench.action.terminal.runSelectedText",
            "cursorDown"
          ]
        },
        "when": "editorTextFocus && !editorReadonly"

      }
  ],
    "languages": [{
      "id": "rev",
      "aliases": ["RevBayes", "rev"],
      "extensions": [".rev",".Rev"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "rev",
      "scopeName": "source.rev",
      "path": "./syntaxes/rev.tmLanguage.json"
    }],
    "repository": {
  "type": "git",
  "url": "https://github.com/BenjaminSoYH/revSyntax.git"
}
  }
}
